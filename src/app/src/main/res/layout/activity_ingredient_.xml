<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ingredient_Activity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/row1"
    android:layout_marginTop="150dp">
    <ImageView
        android:id="@+id/ingred1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ig1"
        android:layout_marginLeft="10dp"/>
    <ImageView
        android:id="@+id/ingred2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ig2"
        android:layout_marginLeft="10dp"/>
    <ImageView
        android:id="@+id/ingred3"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ig3"
        android:layout_marginLeft="10dp"/>


</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/row2"
        android:layout_below="@id/row1">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="육류"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:id="@+id/meat"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="해산물"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="50dp"
            android:id="@+id/seafood"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="채소"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"
            android:id="@+id/vegetable"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/row3"
        android:layout_below="@id/row2">
        <ImageView
            android:id="@+id/ingred4"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ig4"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:id="@+id/ingred5"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ig5"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:id="@+id/ingred6"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ig6"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/row4"
        android:layout_below="@id/row3">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="과일"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:id="@+id/fruit"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="양념/소스류"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:id="@+id/sauce"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="유제품/견과류"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:id="@+id/dairy_nut"/>
    </LinearLayout>




</RelativeLayout>
</android.support.constraint.ConstraintLayout>